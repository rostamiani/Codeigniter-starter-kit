{% extends '_base.twig' %}

{% set no_menu = true %}

{% block content %}
<div class="middle-box text-center loginscreen animated fadeInDown pb-5">
    <div>
        <div>
            <h1 class="logo-name">پارت</h1>
        </div>
        <h3>سیستم جامع مستندات پارت پلاستیک</h3>
		{{form_open('', {'id':'form_login', 'data-parsley-validate':''})}}
			<div class="form-group">
				{# <label for="username">نام کاربری</label> #}
				<input type="text" name="username" id="username" class="form-control" required data-parsley-required-message="نام کاربری را وارد کنید" placeholder="نام کاربری">
			</div>
			<div class="form-group">
				{# <label for="password">کلمه عبور</label> #}
				<input type="password" name="password" id="password" class="form-control" required data-parsley-required-message="کلمه عبور را وارد کنید" placeholder="کلمه عبور">
			</div>
			<div class="form-group">
				<input type="submit" value="ورود" class="btn btn-primary btn-submit">
			</div>
		{{form_close()}}
    </div>
</div>

<script type="text/javascript">
	$(document).ready(function() {

		// Submit the form if btn-submit clicked
		$('#form_login').submit(function(e){

			// Prevent default submittion
			e.preventDefault();

			// Validate
			if ($(this).parsley().isValid()) {

				// Get data from form
				var data = $('#form_login').serialize();

				// Send login request
				$.post('{{base_url()}}authentication/ajax_login',data , function(data, textStatus, xhr) {

					// If there is no errors
					if(data.code == 0) {
						// Go to main page
						window.location = "{{base_url()}}";
					}
					else {
						// Show error
						modal_message(data.message);
					}
				}, "json");
			};
		});
	});
</script>

{% endblock %}