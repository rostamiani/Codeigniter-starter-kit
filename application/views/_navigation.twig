{# Main navigation #}

{# Set user image path #}
{% if this_user.image_file is defined and this_user.image_file %}
    {% set user_image_path = base_url()~'assets/img/user_images/'~this_user.image_file %}
{% else %}
    {% set user_image_path = base_url()~'assets/img/user_image_default.png' %}
{% endif %}

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav metismenu" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element text-center">
                    <div class="circle w-75 mx-auto">
                        <img alt="image" src="{{user_image_path}}"/>
                    </div>
                    <p class="h6 mt-3 text-white">{{this_user.first_name}} {{this_user.last_name}}</p>
                    <span class="mt-1 label label-success">{{label.user_type[this_user.type]}}</span>
                </div>
                <div class="logo-element">
                    <img src="{{user_image_path}}" class="img-fluid rounded-circle w-50">
                </div>
            </li>
            <li class="{% if uri == 'dashboard' %}active{% endif %}">
                <a href="{{base_url()}}dashboard"><i class="fa fa-th-large"></i> <span class="nav-label">پنل مدیریت</span></a>
            </li>
            <li class="{% if uri == 'report' %}active{% endif %}">
                <a href="{{base_url()}}report"><i class="fa fa-chart-pie"></i> <span class="nav-label">گزارش ها</span>  </a>
            </li>
            {% if this_user.type_title in ['admin'] %}
            <li class="{% if uri == 'user' %}active{% endif %}">
                <a href="{{base_url()}}user"><i class="fa fa-users"></i> <span class="nav-label">لیست کاربران</span></a>
            </li>
            {% endif %}
            
            <li class="{% if uri == 'profile' %}active{% endif %}">
                <a href="{{base_url()}}profile"><i class="fa fa-user-edit"></i> <span class="nav-label">ویرایش پروفایل</span>  </a>
            </li>

        </ul>

    </div>
</nav>

