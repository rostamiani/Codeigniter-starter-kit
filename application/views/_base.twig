<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{page_header}}</title>

    <link href="{{base_url()}}assets/css/bootstrap.min.rtl.css" rel="stylesheet">
    {# <link href="{{base_url()}}assets/font-awesome/css/font-awesome.css" rel="stylesheet"> #}
    <link href="{{base_url()}}assets/fontawesome-free-5.1.0-web/css/all.css" rel="stylesheet">

    <!-- Morris -->
    <link href="{{base_url()}}assets/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">

    <link href="{{base_url()}}assets/css/animate.css" rel="stylesheet">
    <link href="{{base_url()}}assets/css/style_rtl.css" rel="stylesheet">
    <link href="{{base_url()}}assets/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
    <link href="{{base_url()}}assets/css/plugins/chosen/bootstrap-chosen.css" rel="stylesheet">
    {% block css_files %}{% endblock %}
    <link href="{{base_url()}}assets/css/custom.css" rel="stylesheet">

    <script src="{{base_url()}}assets/js/jquery-3.1.1.min.js"></script>
</head>

<body class="rtls">
    
    {% include '_modals.twig' %}
    
    <div class="h-100">

        {% if not no_menu is defined %}
            {% include '_navigation.twig' %}
            <div id="page-wrapper" class="gray-bg">
            {% include '_topbar.twig' %}
        {% else %}
            <div class="bg-gray">
        {% endif %}

            <div class="py-4 animated fadeInRight">
                {% block content %}{% endblock %}
            </div>

        </div>

{#         {% if not no_menu is defined %}
            <div id="left-sidebar">
                {% include '_left_sidebar.twig' %}
            </div>
        {% endif %} #}

    </div>

    <!-- Mainly scripts -->
    <script src="{{base_url()}}assets/js/popper.min.js"></script>
    <script src="{{base_url()}}assets/js/bootstrap.js"></script>
    <script src="{{base_url()}}assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="{{base_url()}}assets/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Flot -->
    {% block js_files %}{% endblock %}
    <script src="{{base_url()}}assets/js/plugins/parsley/parsley.min.js"></script>
    <script src="{{base_url()}}assets/js/plugins/parsley/i18n/fa.js"></script>
    <script src="{{base_url()}}assets/js/plugins/dataTables/datatables.min.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.spline.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.pie.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/jquery.flot.symbol.js"></script>
    <script src="{{base_url()}}assets/js/plugins/flot/curvedLines.js"></script>
    <script src="{{base_url()}}assets/js/plugins/chosen/chosen.jquery.js"></script>    

    <!-- Peity -->
    <script src="{{base_url()}}assets/js/plugins/peity/jquery.peity.min.js"></script>
    <script src="{{base_url()}}assets/js/demo/peity-demo.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="{{base_url()}}assets/js/inspinia_rtl.js"></script>
    <script src="{{base_url()}}assets/js/plugins/pace/pace.min.js"></script>

    <!-- jQuery UI -->
    <script src="{{base_url()}}assets/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- Jvectormap -->
    <script src="{{base_url()}}assets/js/plugins/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="{{base_url()}}assets/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>

    <!-- Sparkline -->
    <script src="{{base_url()}}assets/js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <!-- Sparkline demo data  -->
    <script src="{{base_url()}}assets/js/demo/sparkline-demo.js"></script>

    <!-- ChartJS-->
    <script src="{{base_url()}}assets/js/plugins/chartJs/Chart.min.js"></script>

    {# Jquery Form plugin #}
    <script src="{{base_url()}}assets/js/plugins/jquery.form.min.js"></script>

    <!-- Custom codes-->
    <script src="{{base_url()}}assets/js/custom.js"></script>

</body>
</html>
